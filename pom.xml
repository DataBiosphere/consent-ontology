    </dependency>

    <!-- OWASP Vulnerability (jetty-servlets-11.0.14.jar): 09/18/2023 -->
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-servlets</artifactId>
