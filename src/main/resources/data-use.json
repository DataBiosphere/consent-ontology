{
  "id": "https://consent-ontology.dsde-prod.broadinstitute.org/schemas/data-use",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Use Schema",
  "version": 1,
  "type": "object",
  "oneOf": [
    {"required": ["generalUse"]},
    {"anyOf": [
      {"required": ["hmbResearch"]},
      {"required": ["diseaseRestrictions"]},
      {"required": ["populationOriginsAncestry"]},
      {"required": ["commercialUse"]},
      {"required": ["methodsResearch"]},
      {"required": ["aggregateResearch"]},
      {"required": ["controlSet"]},
      {"required": ["controlSetOption"]},
      {"required": ["gender"]},
      {"required": ["pediatric"]},
      {"required": ["populationRestrictions"]},
      {"required": ["dateRestriction"]},
      {"required": ["recontactingDataSubjects"]},
      {"required": ["recontactMay"]},
      {"required": ["recontactMust"]},
      {"required": ["genomicPhenotypicData"]},
      {"required": ["other"]},
      {"required": ["otherRestrictions"]},
      {"required": ["cloudStorage"]},
      {"required": ["ethicsApprovalRequired"]},
      {"required": ["geographicalRestrictions"]},
      {"required": ["illegalBehavior"]},
      {"required": ["addiction"]},
      {"required": ["sexualDiseases"]},
      {"required": ["stigmatizeDiseases"]},
      {"required": ["vulnerablePopulations"]},
      {"required": ["psychologicalTraits"]},
      {"required": ["nonBiomedical"]}
    ]}
  ],
  "properties": {
    "generalUse": {
      "type": "boolean"
    },
    "hmbResearch": {
      "type": "boolean"
    },
    "diseaseRestrictions": {
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true
      }
    },
    "populationOriginsAncestry": {
      "type": "boolean"
    },
    "commercialUse": {
      "type": "boolean"
    },
    "methodsResearch": {
      "type": "boolean"
    },
    "aggregateResearch": {
      "type": "string",
      "enum": ["Yes", "No", "Unspecified"]
    },
    "controlSet": {
      "type": "boolean"
    },
    "controlSetOption": {
      "type": "string",
      "enum": ["Yes", "No", "Unknown"]
    },
    "gender": {
      "type": "string",
      "enum": ["Female", "Male"]
    },
    "pediatric": {
      "type": "boolean"
    },
    "populationRestrictions": {
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true
      }
    },
    "dateRestriction": {
      "type": "string"
    },
    "recontactingDataSubjects": {
      "type": "boolean"
    },
    "recontactMay": {
      "type": "string"
    },
    "recontactMust": {
      "type": "string"
    },
    "genomicPhenotypicData": {
      "type": "string",
      "enum": ["Yes", "No", "Unspecified"]
    },
    "other": {
      "type": "string"
    },
    "otherRestrictions": {
      "type": "boolean"
    },
    "cloudStorage": {
      "type": "string",
      "enum": ["Yes", "No", "Unspecified"]
    },
    "ethicsApprovalRequired": {
      "type": "boolean"
    },
    "geographicalRestrictions": {
      "type": "string"
    },
    "illegalBehavior": {
      "type": "boolean"
    },
    "addiction": {
      "type": "boolean"
    },
    "sexualDiseases": {
      "type": "boolean"
    },
    "stigmatizeDiseases": {
      "type": "boolean"
    },
    "vulnerablePopulations": {
      "type": "boolean"
    },
    "psychologicalTraits": {
      "type": "boolean"
    },
    "nonBiomedical": {
      "type": "boolean"
    }
  }
}
