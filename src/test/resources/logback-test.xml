<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.hp.hpl.jena" level="ERROR"/>
    <logger name="org.mindswap" level="ERROR"/>
    <logger name="org.semanticweb" level="ERROR"/>
    <logger name="org.broadinstitute" level="INFO"/>
    <!-- Set to TRACE to see full requests/responses for Gatling test runs -->
    <logger name="io.gatling.http.engine.response" level="INFO" />

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>